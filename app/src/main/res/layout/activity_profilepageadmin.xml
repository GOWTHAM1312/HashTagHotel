<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/smokewhite"
    tools:context=".ProfilepageadminActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/profiletoporange"
        android:layout_alignParentTop="true"
        android:id="@+id/profiletop"
        >

    </ImageView>

    <ImageView
        android:layout_width="26dp"
        android:layout_height="30dp"
        android:src="@drawable/profilebackarrow"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/arrbackprofile"
        >
    </ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
    </TextView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/profiletop"
        android:src="@drawable/profileuser"
        android:layout_centerInParent="true"
        android:layout_marginTop="-50dp"
        android:id="@+id/profilephoto"
        >
    </ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/profilephoto"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="15dp"
        android:id="@+id/usernameprofile">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/usernameprofile"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:id="@+id/usernamecard"
        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="15sp"
            android:hint="Enter Your Name">
        </EditText>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail I'd"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/usernamecard"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="20dp"
        android:id="@+id/useremail"
        >

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/useremail"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:id="@+id/useremailcard"
        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="15sp"
            android:hint="Enter Your E-Mail">
        </EditText>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/useremailcard"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="20dp"
        android:id="@+id/userphno">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/userphno"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:id="@+id/userphnocard"
        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="15sp"
            android:id="@+id/mobileET"
            android:hint="Enter Your Number">
        </EditText>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/userphnocard"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="20dp"
        android:id="@+id/useraddress">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/useraddress"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/useraddresscard"
        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="15sp"
            android:id="@+id/addressET"
            android:hint="Enter Your Address">
        </EditText>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Update"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:layout_below="@id/useraddresscard"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginRight="64dp"
        android:id="@+id/updatebuttton">

    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Log Out"
        android:textStyle="bold"
        android:backgroundTint="@color/orange"
        android:layout_below="@id/updatebuttton"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:layout_marginRight="64dp"
        android:id="@+id/logoutbutton">
    </Button>

</RelativeLayout>
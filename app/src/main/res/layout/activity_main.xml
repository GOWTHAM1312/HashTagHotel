<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smokewhite"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="412dp"
        android:layout_height="389dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/startpageup">
    </ImageView>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/logopage1">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#HASHTAG"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:layout_below="@id/logopage1"
        android:layout_centerHorizontal="true"
        android:id="@+id/hashtagpage1">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOTEL"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:layout_below="@id/hashtagpage1"
        android:layout_centerHorizontal="true"
        android:id="@+id/hotel">
    </TextView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/arrowIcon"
        android:layout_gravity="center"
        android:src="@drawable/logorightarrow"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hotel"
        android:layout_marginTop="55dp">
    </ImageView>


    <ImageView
        android:layout_width="412dp"
        android:layout_height="282dp"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/startpagedownone">

    </ImageView>
</RelativeLayout>